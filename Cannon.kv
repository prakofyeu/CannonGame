#:kivy 1.0.9


<Bullet>:
    size: 10, 10
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<Bomb>:
    size: 20, 20
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size


<Obstacle>:
    #size: 100, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<Laser>:
    size: 20, 2000
    pos: 300, 300
    canvas:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: 400, 300
        Rectangle:
            pos: self.pos
            size: self.size
        PopMatrix

<Game>:
    ball: pong_ball
    bomb: bomb

    Bullet:
        id: pong_ball
    
    Bomb:
        id: bomb

    Button:
        id: change_weapon_laser
        size: 50, 50
        text: "Laser"
        on_release: root.change_weapon("laser")
        center_x: 10 + self.width
        center_y: root.height - 10 - self.height

    Button:
        id: change_weapon_bullet
        size: 50, 50
        text: "Bullet"
        on_release: root.change_weapon("bullet")
        center_x: 10 + 2 * self.width
        center_y: root.height - 10 - self.height

    Button:
        id: change_weapon_bullet
        size: 50, 50
        text: "Bomb"
        on_release: root.change_weapon("bomb")
        center_x: 10 + 3 * self.width
        center_y: root.height - 10 - self.height